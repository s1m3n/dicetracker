rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isNotBlocked() {
      let userPath = /databases/$(database)/documents/users/$(request.auth.uid);
      return !exists(userPath) || !get(userPath).data.get('blockedUser', false);
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if isOwner(userId);

      allow create: if isOwner(userId)
                    && request.resource.data.keys().hasAll(['email', 'displayName', 'lastLogin'])
                    && !request.resource.data.keys().hasAny(['blockedUser']);

      allow update: if isOwner(userId)
                    && request.resource.data.keys().hasAll(['email', 'displayName', 'lastLogin'])
                    && request.resource.data.get('blockedUser', false) == resource.data.get('blockedUser', false);

      allow delete: if false;

      match /playerNames/{nameId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /games/{gameId} {
      allow read: if isAuthenticated() && isNotBlocked()
                  && resource.data.userId == request.auth.uid;

      allow create: if isAuthenticated() && isNotBlocked()
                    && request.resource.data.userId == request.auth.uid;

      allow update: if isAuthenticated() && isNotBlocked()
                    && resource.data.userId == request.auth.uid;

      allow delete: if isAuthenticated() && isNotBlocked()
                    && resource.data.userId == request.auth.uid;

      match /rolls/{rollId} {
        allow read: if isAuthenticated() && isNotBlocked()
                    && get(/databases/$(database)/documents/games/$(gameId)).data.userId == request.auth.uid;

        allow create: if isAuthenticated() && isNotBlocked()
                      && get(/databases/$(database)/documents/games/$(gameId)).data.userId == request.auth.uid;

        allow delete: if isAuthenticated() && isNotBlocked()
                      && get(/databases/$(database)/documents/games/$(gameId)).data.userId == request.auth.uid;
      }
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
